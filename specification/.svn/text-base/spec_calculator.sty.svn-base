\def\maketitle{
\begin{titlepage}

% enlarge page
\setlength{\topmargin}{0pt}
\setlength{\headheight}{0pt}
\setlength{\headsep}{0pt}
\setlength{\footskip}{0pt}

\let\footnotesize\small \let\footnoterule\relax \setcounter{page}{1}
\null
\vfill
\large
\vskip -4 cm 

\begin{center}
% heading
{\LARGE\bf \@headline \par} \vskip 2cm

\vskip 1cm

% title
{\LARGE\bf Spezifikation \par}
\vskip 0.5cm
{\Huge\bf \@title \par} 
%\vskip 1cm
\@group
\vskip 4cm

\begin{flushleft}

\@author
\vskip 1cm
Wien, am~\today{}
\end{flushleft}
\end{center} \par
\vskip 1.5cm 

\end{titlepage}

\setcounter{footnote}{0} 
\let\thanks\relax
} % \def\maketitle


